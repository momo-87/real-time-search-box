<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Real Time Search Analytics</title>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>Real Time Search Analytics</h1>

  <input type="text" id="searchInput" placeholder="Search articles..." oninput="handleSearch()">

  <div id="searchResults"></div>

  <script>

    const handleSearch = () => {
      let Input = document.getElementById('searchInput').value;

        if (Input.length > 0) {
          fetch('/query', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
            },
            body: JSON.stringify({ query: Input })
          })
            .then(response => response.json())
            .then(data => console.log(data))
            .catch(error => console.error('Error:', error));
        }

      //Display the query as the result for checking purpose
      document.getElementById('searchResults').innerText = Input;
    }
  </script>
</body>
</html>